@page "/"

@namespace TTConfTool.Server.Pages

@using TTConfTool.UI

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="minimum-scale=1, initial-scale=1, width=device-width">

    <title>TT ConfTool</title>
    <base href="/" />

    <link href="manifest.json" rel="manifest" />
    <link rel="apple-touch-icon" sizes="512x512" href="icon-512.png" />

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link href="_content/TTConfTool.UI/TTConfTool.UI.bundle.scp.css" rel="stylesheet">

    <script type="module" src="https://cdn.jsdelivr.net/npm/@@pwabuilder/pwaupdate"></script>
</head>
<body>
    @*<component type="typeof(App)" render-mode="WebAssemblyPrerendered" />*@
    <app>@(await Html.RenderComponentAsync<App>(RenderMode.Static))</app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    @*<pwa-update swpath="service-worker.js" showStorageEstimate updatemessage="Neues Update verfügbar."></pwa-update>*@

    <script src="_content/Microsoft.AspNetCore.Components.WebAssembly.Authentication/AuthenticationService.js"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <script src="_framework/blazor.webassembly.js"></script>

    @*<script>navigator.serviceWorker.register('service-worker.js');</script>*@
</body>
</html>
